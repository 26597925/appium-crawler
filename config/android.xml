        <!-- capability配置 -->
        <capabilities>
            <appPackage>com.wosai.cashbar</appPackage>
            <appActivity>com.wosai.cashbar.core.guide.WelcomeActivity</appActivity>
            <udid>YSBIAEGQ99EA9HW4</udid>
